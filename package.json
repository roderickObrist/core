{
  "name": "core",
  "version": "1.0.0",
  "description": "Core Utils.",
  "private": true,
  "author": "Rodrick Obrist",
  "license": "UNLICENSED",
  "main": "index.js",
  "dependencies": {
    "mysql": "^2.10.2",
    "rethinkdb": "^2.3.3",
    "moment": "^2.16.0",
    "colors": "^1.1.2"
  },

  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": "eslint:all",
    "rules": {
      "no-console": 0,
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "id-length": 0,
      "no-mixed-requires": 0,
      "padded-blocks": 0,
      "space-before-function-paren": 0,
      "no-prototype-builtins": 0,
      "dot-location": 0,
      "no-magic-numbers": 0,
      "arrow-parens": 0,
      "object-curly-newline": 0,
      "one-var": 0
    }
  }
}